<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/score_board"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/scoreboard_spacing"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/score_label"
        android:text="@string/score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/scoreboard_text_size"
        android:textColor="@color/action_bar_text_color"
        android:layout_marginRight="@dimen/scoreboard_spacing"
        android:layout_marginEnd="@dimen/scoreboard_spacing"
        android:layout_marginLeft="@dimen/scoreboard_spacing_indent"
        android:layout_marginStart="@dimen/scoreboard_spacing_indent"/>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/score_label"
        android:layout_toRightOf="@id/score_label"
        android:textSize="@dimen/scoreboard_text_size"
        android:textColor="@color/action_bar_text_color"
        android:layout_marginLeft="@dimen/scoreboard_spacing"
        android:layout_marginStart="@dimen/scoreboard_spacing"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/scoreboard_text_size"
        android:textColor="@color/action_bar_text_color"
        android:layout_marginLeft="@dimen/scoreboard_spacing"
        android:layout_marginStart="@dimen/scoreboard_spacing"
        android:layout_marginRight="@dimen/scoreboard_spacing_indent"
        android:layout_marginEnd="@dimen/scoreboard_spacing_indent"/>

    <TextView
        android:id="@+id/time_label"
        android:text="@string/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/time"
        android:layout_toStartOf="@id/time"
        android:textStyle="bold"
        android:textSize="@dimen/scoreboard_text_size"
        android:textColor="@color/action_bar_text_color"
        android:layout_marginRight="@dimen/scoreboard_spacing"
        android:layout_marginEnd="@dimen/scoreboard_spacing"/>

</RelativeLayout>