<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dugan.tileshade" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Spotit" >
        <activity
            android:name="com.dugan.tileshade.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dugan.tileshade.GameActivity"
            android:label="@string/title_activity_game"
            android:parentActivityName="com.dugan.tileshade.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dugan.tileshade.MainActivity" />
        </activity>
        <activity
            android:name="com.dugan.tileshade.GameOverActivity"
            android:label="@string/title_activity_game_over"
            android:parentActivityName="com.dugan.tileshade.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat.Dialog">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dugan.tileshade.MainActivity" />
        </activity>
    </application>

</manifest>
